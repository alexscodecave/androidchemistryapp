<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alexb.chemistryapplication.MainActivity">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:background="@color/FDGreen"
            android:id="@+id/androidPeriodicTableImageButton"
            android:layout_gravity="top"
            android:src="@drawable/periodictablemdpi" />


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/FDBlue"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/androidChemistryContent"
            android:src="@drawable/chemistrycontentartboardmdpi" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/FDWhite"
            android:textColor="@color/white"
            android:id="@+id/androidSettings"
            android:layout_gravity="bottom"
            android:src="@drawable/famouschemists" />

</LinearLayout>
