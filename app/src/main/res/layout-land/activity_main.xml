<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexb.chemistryapplication.MainActivity">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/FDGreen"
            android:id="@+id/androidPeriodicTableImageButton"
            android:src="@drawable/periodictableldpi"
             />


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/FDBlue"
            android:textColor="@color/white"
            android:id="@+id/androidChemistryContent"
            android:src="@drawable/chemistrycontentartboardldpi"
            android:layout_below="@+id/androidPeriodicTableImageButton"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/androidSettings" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/FDWhite"
            android:textColor="@color/white"
            android:id="@+id/androidSettings"
            android:src="@drawable/cogldpi"
            android:layout_alignParentBottom="true"
             />

</RelativeLayout>
