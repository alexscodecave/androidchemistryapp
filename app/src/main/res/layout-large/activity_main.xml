<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexb.chemistryapplication.MainActivity">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/FDGreen"
            android:id="@+id/androidPeriodicTableImageButton"
            android:src="@drawable/periodictablexxhdpi"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/FDBlue"
            android:textColor="@color/white"
            android:id="@+id/androidChemistryContent"
            android:src="@drawable/quizxxhdpi"
            android:layout_below="@+id/androidPeriodicTableImageButton"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/FDWhite"
            android:textColor="@color/white"
            android:id="@+id/androidSettings"
            android:src="@drawable/famouschemists"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>
